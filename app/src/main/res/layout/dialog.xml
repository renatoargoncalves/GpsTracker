<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:minWidth="400dp"
    android:layout_margin="4dp"
    android:padding="2dp">

    <TextView
        android:id="@+id/textView_dialog_editText_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_margin="8dp"
        android:gravity="left"/>


    <TextView
        android:id="@+id/textView_dialog_editText_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Dialog text"
        android:textColor="@color/veryDarkGray"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/textView_dialog_editText_cancel"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="CANCEL"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/textView_dialog_editText_ok"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="CONFIRMAR"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>


    </LinearLayout>

</LinearLayout>